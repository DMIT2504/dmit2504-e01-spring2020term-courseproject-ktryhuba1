<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="@dimen/widget_margin"
    >

    <TextView
        android:id="@+id/percent_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="This text should be overwritten on line 53 in BatteryWidget.java "
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/progress_bar_charged_percentage"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:paddingTop="20dp"
        android:progressBackgroundTint="#6FCAC5"

        android:progressTint="@color/progress_bar_color" />
</RelativeLayout>